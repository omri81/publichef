<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Description"
                    style="@style/Base.TextAppearance.AppCompat.Headline"
                    android:layout_centerInParent="true"
                    android:textColor="#FF4D4D"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
            <TableRow android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#FF4D4D"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/photo150"
                android:id="@+id/Activity_Recipe_Summery_Photo"
                android:layout_margin="16dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Chef's Name: "
                    android:textSize="20dp"
                    android:id="@+id/name_not_change"
                    android:textColor="#FF4D4D"/>

                <TextView
                    android:id="@+id/Activity_Recipe_Summery_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="73dp"
                    android:text="omri ovadia"
                    android:textColor="#FF4D4D"
                    android:textStyle="bold"
                    android:textSize="20sp" />
            </RelativeLayout>
            <TableRow android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FF4D4D"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Recipe's Name: "
                    android:textSize="20dp"
                    android:id="@+id/recipe_name_not_change"
                    android:textColor="#FF4D4D"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="73dp"
                    android:text="omri ovadia"
                    android:textColor="#FF4D4D"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/Activity_Recipe_Summery_recipe_name"
                    />
            </RelativeLayout>
            <TableRow android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FF4D4D"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Recipe's Type: "
                    android:textSize="20dp"
                    android:id="@+id/recipe_dish_kind_not_change"
                    android:textColor="#FF4D4D"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="73dp"
                    android:text="omri ovadia"
                    android:textColor="#FF4D4D"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/Activity_recipe_Summery_recipe_dish_kind"
                    />
            </RelativeLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF4D4D">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="Ingredients: "
                        android:textSize="20dp"
                        android:id="@+id/ingredient_not_change"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        />

                </android.support.constraint.ConstraintLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_toRightOf="@id/ingredient_not_change"
                    android:textSize="20dp"
                    android:id="@+id/Activity_Recipe_Summery_ingredients"
                    android:textStyle="bold"

                    />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Steps To Follow: "
                    android:textSize="20dp"
                    android:id="@+id/methods_not_change"
                    android:textColor="#FF4D4D"/>

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/Activity_Recipe_Summery_Methods"


                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Save And Upload"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/Activity_Recipe_Summery_doneBtn"
                    android:background="#FF4D4D"
                    android:textColor="#ffffff"/>

            </RelativeLayout>





        </LinearLayout>





    </ScrollView>



</RelativeLayout>
